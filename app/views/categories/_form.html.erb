<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
    <%= render "shared/error", obj: @category %>

      <%= form_with(model: @category, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>

        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow p-3 bg-white rounded", placeholder: "Enter Name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-lg btn-outline-light" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[Back to Categories Listing Page]", categories_path, class: "text-info" %>
    </div>
  </div>

</div>