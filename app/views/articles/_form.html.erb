<%# end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
    <%= render "shared/error", obj: @article %>

      <%= form_with(model: @article, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>

        <div class="form-group row">
          <%= f.label :title, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow p-3 bg-white rounded", placeholder: "Enter Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow p-3 bg-white rounded", placeholder: "Enter Description" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-lg btn-outline-light" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[Back to Articles Listing Page]", articles_path, class: "text-info" %>
    </div>
  </div>

</div>