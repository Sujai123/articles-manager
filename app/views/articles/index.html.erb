<h1 class="text-center mt-4">List of all Articles</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            added by me
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to article.title, article, class: "text-success" %>
            </h5>
            <p class="card-text"><%= article.description %></p>
            <%= link_to "Show", article, class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-primary" %>
            <%= link_to "Delete", article, method: :delete, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(article.created_at)  %>,
            Updated <%= time_ago_in_words(article.updated_at) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>